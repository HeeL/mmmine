<div class="user-post clearfix">
    <%= form_tag(comment_create_path, remote: true, class: "create-comment-form comment-form", data: {guest: !current_user}) do %>
	    <img src="<%=(current_user || User.new).photo(:photo)%>" alt="ava2" width="45" height="45">
        <textarea name="text" placeholder="Add your comment, #hashtag, @mention"></textarea>
        <%=hidden_field_tag :product_id, @product.id%>
        <button class="post-comment btn gray">Post</button>
    <%end%>
</div>
