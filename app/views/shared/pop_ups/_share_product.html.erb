<div id="share<%=@product.id%>" data-share-product="<%=@product.id%>" class="style modal hide fade share-product" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h3>show a friend</h3>
  </div>
  <div class="modal-body">
    <%= form_tag(share_product_path(@product.id), remote: true) do %>
      <p>Share this product with a friend from <i>mmmine</i></p>
      <%=text_field_tag :users, nil%><br />
      <textarea name="comment" placeholder="Add your comment"></textarea>
      <button class="btn" type="submit">Tag</button>
    <%end%>
  </div>
</div>
