<div id="post" class="style modal hide fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
      <h3>sell an item</h3>
  </div>
  <div class="modal-body">
    <%= form_for(Product.new, url: product_create_path, remote: true, html: {multipart: true}) do |f| %>
      <%3.times do |i| %>
        <%= file_field_tag "product_pictures[#{i}]", placeholder: 'You can upload up to 3 photos' %>
      <%end%>
      <div class="input-line">
        <%= f.label :title, 'Title*' %>
        <%= f.text_field :title %>
      </div>
      <div class="input-line">
        <%= f.label :category, 'Category*' %>
        <%= f.select :category_id, Category.for_select, include_blank: 'Please choose...' %>
        <%= f.select :sub_category_id, [] %>
      </div>
      <div class="input-line-text">
        <%= f.label :description, 'Description*' %>
        <%= f.text_area :description, placeholder: 'Description' %>
      </div>
      <div class="input-line">
        <%= f.label :size, 'Size*'  %>
        <%= f.text_field :size %>
      </div>
      <div class="input-line">
        <%= f.label :price, 'Price*' %>
        <div class="right-fields">
          <%= f.text_field :price, class: 'price-field' %>
          <%= f.select :currency, currencies_for_select, {}, class: 'currency' %>  
        </div>
      </div>
      <div class="clear"></div>
      <div class="mandatory-info">
        *Mandatory
      </div>
      <button class="btn big" type="submit">Post</button>
    <%end%>
  </div>
</div>